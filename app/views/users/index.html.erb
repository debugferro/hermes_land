<div class="container">
    <div class="card-signup">
      <h1 id="find-title">Find your buddy!</h1>
      <div class="interest-form">
        <%= simple_form_for :query, url: users_path, method: "GET", html: { class: '', id: '' } do |f| %>
          <div class="p-1">
            <p>Interests:</p>
            <%= f.input :interests, as: :select, collection: Interest.all, value_method: :name, label_method: :name, input_html: { class: 'select2max form-small', multiple: true }, required: false, label: false %>
          </div>
          <div class="p-1">
            <p>Countries:</p>
            <%= f.input :countries, as: :select, collection: User::COUNTRIES, input_html: { class: 'select2max form-large', multiple: true }, required: false, label: false  %>
          </div>
          <div class="p-1">
            <p>Languages:</p>
            <%= f.input :languages, as: :select, collection: Language.all, input_html: { class: 'select2max form-large', multiple: true }, required: false, label: false  %>
          </div>
          <div class="p-1">
            <%= f.submit "Search", class: "btn-search justify-content-center" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="cards">
      <% @results.each do |user|%>
        <div class="card-profiles">
          <div class="card-filler"></div>
          <div class="card-category card-feed-position align-center outflow-avatar" style="background-image: linear-gradient(rgba(211,211,211,0.1), rgba(211,211,211,0.3)), url(https://kitt.lewagon.com/placeholder/users/ssaunier)">
            <%= link_to "#{user.username}", user_path(user), class: "btn-profile" %>
          </div>
          <%= image_tag "circle-greek.png",  class: "greek-circle"%>
          <div class="card-profile-content">
            <p><strong>About me:</strong> <%= user.about_me.truncate(100) %></p>
            <p><strong>Country:</strong> <%= user.country %></p>
            <p><strong>Native language:</strong> <%= user.native_language %>
            <% user.my_languages&.each do |language| %>
              <p></p>
              <% level = 'ğŸ”¹' if language.level == "Begginer"%>
              <% level = 'ğŸ”¹ğŸ”¹' if language.level == "Elementary"%>
              <% level = 'ğŸ”¹ğŸ”¹ğŸ”¹' if language.level == "Intermediate"%>
              <% level = 'ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹' if language.level == "Advanced"%>
              <% level = 'ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹' if language.level == "Fluent"%>
              <p>
                <%= "#{language.language.name}: #{level}" %>
              </p>
            <% end %>
            <% user.interests&.each do |interest| %>
              (<%= interest.name %>)
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>
